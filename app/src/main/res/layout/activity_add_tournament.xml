<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTournamentActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:id="@+id/actionBar"
            layout="@layout/custom_action_bar" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/titleTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="title"
        app:met_floatingLabel="highlight"
        android:inputType=""

        android:textCursorDrawable="@color/colorPrimary"
        />

    <Spinner
        android:id="@+id/spinnerGameSelect"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/bottomline"
        />



        <Spinner
            android:id="@+id/spinnerDistrictSelect"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/bottomline"
            />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/placeTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Place"
        android:inputType=""
        app:met_floatingLabel="highlight"
        android:layout_margin="10dp"
        android:textCursorDrawable="@color/colorPrimary"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dateTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:clickable="true"
        android:focusable="false"
        app:met_floatingLabel="highlight"
        android:layout_margin="10dp"
        android:textCursorDrawable="@color/colorPrimary"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/priceTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Registration Fee"
        android:inputType="number"
        app:met_floatingLabel="highlight"
        android:layout_margin="10dp"
        android:textCursorDrawable="@color/colorPrimary"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/contactTextEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone"
            app:met_floatingLabel="highlight"
            android:layout_margin="10dp"
            android:textCursorDrawable="@color/colorPrimary"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/totalTeamsTextEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total no of teams"
            android:inputType="number"
            app:met_floatingLabel="highlight"
            android:layout_margin="10dp"
            android:textCursorDrawable="@color/colorPrimary"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/otherDescTextEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="More details"
            app:met_floatingLabel="highlight"
            android:inputType=""
            android:layout_margin="10dp"
            android:textCursorDrawable="@color/colorPrimary"/>
    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/icons8_plus_512"
         />

        <Button
            android:id="@+id/addTournament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="ADD"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>